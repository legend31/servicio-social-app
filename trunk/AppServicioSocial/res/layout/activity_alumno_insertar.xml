<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AlumnoInsertarActivity" >

    <EditText
        android:id="@+id/txtCarnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="@string/carnet"
        android:maxLength="7"
        android:inputType="textPersonName" >

        <requestFocus />
        </EditText>

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCarnet"
        android:layout_below="@+id/txtCarnet"
        android:ems="10"
        android:hint="@string/nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNombre"
        android:layout_below="@+id/txtNombre"
        android:ems="10"
        android:hint="@string/telefono"
        android:inputType="phone"
        android:maxLength="8" />

    <EditText
        android:id="@+id/txtDui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTelefono"
        android:layout_below="@+id/txtTelefono"
        android:ems="10"
        android:hint="@string/dui"
        android:inputType="number"
        android:maxLength="9" />

    <EditText
        android:id="@+id/txtNit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDui"
        android:layout_below="@+id/txtDui"
        android:ems="10"
        android:hint="@string/nit"
        android:inputType="number"
        android:maxLength="14" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNit"
        android:layout_below="@+id/txtNit"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" >
        
    </EditText>

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="@string/guardar"
        android:onClick="insertarAlumno" />

</RelativeLayout>

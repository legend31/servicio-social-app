<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sv.edu.ues.fia.appserviciosocial.SolicitanteInsertarActivity"
    tools:ignore="MergeRootFrame" >

    <EditText
        android:id="@+id/editTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/telefono" 
        android:inputType="number"/>

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTelefono"
        android:layout_alignLeft="@+id/editTelefono"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="@string/nombre"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTelefono"
        android:layout_below="@+id/editTelefono"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/email" 
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/editNitInstitucionSolicitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTelefono"
        android:layout_below="@+id/editCorreo"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="@string/nitInstitucion"
        android:inputType="number" />

    <EditText
        android:id="@+id/editcargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editNitInstitucionSolicitante"
        android:layout_below="@+id/editNitInstitucionSolicitante"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/idCargo" 
        android:inputType="number" />

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editcargo"
        android:layout_below="@+id/editcargo"
        android:layout_marginRight="44dp"
        android:layout_marginTop="33dp"
        android:onClick="insertarSolicitante"
        android:text="@string/guardar" />

</RelativeLayout>